{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build(g++)",
            "type": "shell",
            "command": "g++",
            "args": [
                // "-std=c++11", // C++11标准
                "-I/usr/include/eigen3",
                "-g",
                "${file}",
                "-o",
                // "${workspaceFolder}/build/${fileBasenameNoExtension}",
                "${fileDirname}/build/${fileBasenameNoExtension}",

                // 先链接OpenGL库，因Pangolin依赖于OpenGL？
                "-L/usr/lib/x86_64-linux-gnu", //链接OpenGL库文件
                "-lGL", // 链接名为libGL的库
                "-lGLU", 
                "-lGLEW",
                // 再链接Pangolin库
                "-I/usr/local/include/pangolin", // 链接Pangolin头文件
                "-L/usr/local/lib", // 链接Pangolin库文件
                "-lpangolin",
                
                // 链接OpenCV库
                "-I/usr/include/opencv4",
                "-L/usr/local/lib",
                "-lopencv_core", "-lopencv_imgproc", "-lopencv_imgcodecs", "-lopencv_highgui", 
                "-lopencv_calib3d", // 链接 OpenCV 立体视觉和校准库 
                "-lopencv_videoio","-lopencv_features2d",
                "-lopencv_video",

                // 链接Ceres库：用于优化求解
                "-I/usr/local/include/ceres",
                "-L/usr/lib",
                "-lceres",               // 链接ceres库  
                "-lglog",                // 如果需要glog库  
                "-lgflags",              // 如果需要gflags库  
                "-lstdc++fs",             // 如果使用C++17的文件系统 
                // 链接LAPACK库（矩阵QR分解）和SuiteSparse库
                "-I/usr/include",
                "-I/usr/include/suitesparse",
                "-L/usr/lib/x86_64-linux-gnu",
                "-llapack",
                "-lblas",
                "-lcholmod","-lamd","-lcolamd",

                // g2o库
                "-I/usr/local/include/g2o",
                "-L/usr/local/lib",
                "-lg2o_core", "-lg2o_types_sba","-lg2o_stuff",
                "-lg2o_solver_csparse",
                "-lg2o_types_slam3d",
                
                // SSE4.2指令集
                "-msse4.2",

                // DBoW3库
                "-I/usr/local/include",
                "-L/usr/local/lib",
                "-lDBoW3",

                // PCL库
                "-I/usr/include/pcl-1.12",
                "-L/usr/lib/x86_64-linux-gnu",
                "-lpcl_common","-lpcl_io","-lpcl_visualization","-lpcl_filters",
                "-lpcl_search","-lpcl_surface",
                // PCL库依赖于VTK库
                "-I/usr/include/vtk-9.1",
                "-L/usr/lib/x86_64-linux-gnu/",
                "-lvtkCommonCore-9.1",

                // OctoMap库
                "-I/usr/include",
                "-L/usr/lib/x86_64-linux-gnu/",
                "-loctomap","-loctomath",
                
            ]
        },
        {
            "label": "python3",
            "type": "shell",
            "command": "python3",
            "args": [
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
        }
    ]
}
